                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:textStyle="italic"
                android:textSize="12dp"
                android:text="@string/txt_resena"></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




